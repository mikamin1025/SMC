---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "../styles/reset.css"
import "../styles/style.css"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	  html {
    background: #fff;
		color: #125135;
		font-family: -apple-system, BlinkMacSystemFont, "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic ProN", FP-HiraKakuProN-W6, メイリオ, Meiryo, sans-serif;
		overflow-x: hidden;
  }
</style>
